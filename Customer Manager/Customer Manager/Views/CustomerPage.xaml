<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Customer_Manager.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Customer_Manager.Models"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">

            <!-- Title -->
            <TextBlock Text="Customers"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Segoe UI Variable"
                       Foreground="{ThemeResource TextFillColorPrimary}" />

            <!-- Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <TextBox x:Name="SearchTextBox"
                         Width="240"
                         PlaceholderText="Search by name or email"
                         TextChanged="SearchTextBox_TextChanged" />
                <Button Content="Refresh" Click="RefreshButton_Click" />
                <Button Content="Add" Click="AddCustomer_Click" />
            </StackPanel>

            <!-- List Header -->
            <Grid Padding="4,8" Background="{ThemeResource AccentFillColorSecondaryBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Name" FontWeight="Bold" />
                <TextBlock Text="Email" FontWeight="Bold" Grid.Column="1" />
                <TextBlock Text="SME / SV" FontWeight="Bold" Grid.Column="2" />
                <TextBlock Text="Date" FontWeight="Bold" Grid.Column="3" />
                <TextBlock Text="Actions" FontWeight="Bold" Grid.Column="4" HorizontalAlignment="Right" />
            </Grid>

            <!-- Customer List -->
            <ListView x:Name="CustomerListView"
          ItemsSource="{x:Bind _customers}"
          SelectionMode="None"
          IsItemClickEnabled="False"
          DoubleTapped="CustomerListView_DoubleTapped"
          HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Customer">
                        <Grid ColumnSpacing="12" Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind Name}" Grid.Column="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />

                            <TextBlock Text="{x:Bind Email}" Grid.Column="1"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondary}" />

                            <TextBlock Text="{x:Bind SmeSv}" Grid.Column="2"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondary}" />

                            <TextBlock Text="{x:Bind MonthDate}" Grid.Column="3"
                            FontSize="14"
                            VerticalAlignment="Center"
                            Foreground="{ThemeResource TextFillColorSecondary}" />


                            <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <Button Content="ðŸ“‚" Click="OpenFolder_Click"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="0" Width="32" Height="32" />
                                <Button Content="ðŸ—‘" Click="DeleteRow_Click"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="0" Width="32" Height="32" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>

