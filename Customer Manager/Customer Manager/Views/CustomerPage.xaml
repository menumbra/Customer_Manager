<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Customer_Manager.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Customer_Manager.Models"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">

            <!-- Title -->
            <TextBlock Text="Customers"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Segoe UI Variable"
                       Foreground="{ThemeResource TextFillColorPrimary}" />

            <!-- Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <TextBox x:Name="SearchTextBox"
                         Width="240"
                         PlaceholderText="Search by name or email"
                         TextChanged="SearchTextBox_TextChanged" />
                <Button Content="Refresh" Click="RefreshButton_Click" />
                <Button Content="Add" Click="AddCustomer_Click" />
            </StackPanel>
            
            <!-- SME / SV Filter -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ToggleButton x:Name="SmeToggle" Content="SME = IG" Click="FilterToggle_Click" />
                <ToggleButton x:Name="SvToggle" Content="SV = HC" Click="FilterToggle_Click" />
            </StackPanel>

            <!-- List Header -->
            <Grid Padding="4,8" Background="{ThemeResource AccentFillColorSecondaryBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Name" FontWeight="Bold" HorizontalAlignment="Left" />
                <TextBlock Text="Email" FontWeight="Bold" HorizontalAlignment="Left" Grid.Column="1" />
                <TextBlock Text="SME / SV" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="2" />
                <TextBlock Text="Actions" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="3" />
            </Grid>

            <!-- Customer List -->
            <ListView x:Name="CustomerListView"
                      ItemsSource="{x:Bind _customers}"
                      SelectionMode="None"
                      IsItemClickEnabled="False"
                      DoubleTapped="CustomerListView_DoubleTapped"
                      HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Customer">
                        <Grid ColumnSpacing="12" Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind Name}" Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="{x:Bind Email}" Grid.Column="1"
                                       FontSize="14"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondary}" />

                            <TextBlock Text="{x:Bind SmeSv}"
           Grid.Column="2"
           FontSize="14"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Foreground="{ThemeResource TextFillColorSecondary}" />


                            <StackPanel Grid.Column="3"
            Orientation="Horizontal"
            Spacing="8"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,4">
                                <Button Content="ðŸ“‚"
            Click="OpenFolder_Click"
            Width="32" Height="32"
            Padding="0"
            VerticalAlignment="Center" />

                                <Button Content="ðŸ—‘"
            Click="DeleteRow_Click"
            Width="32" Height="32"
            Padding="0"
            VerticalAlignment="Center" />
                            </StackPanel>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>
