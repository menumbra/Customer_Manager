<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Customer_Manager.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Customer_Manager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">

            <!-- Page Title -->
            <TextBlock Text="Settings"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Segoe UI Variable"
                       Foreground="{ThemeResource TextFillColorPrimary}" />

            <!-- Section Header -->
            <TextBlock Text="Storage Location"
                       FontSize="16"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI Variable"
                       Foreground="{ThemeResource TextFillColorSecondary}" />

            <!-- Folder Picker -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Pick Folder"
                        Click="PickFolderButton_Click" />
                <TextBlock x:Name="SelectedFolderPathText"
                           VerticalAlignment="Center"
                           Text="No folder selected."
                           FontFamily="Segoe UI Variable"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource TextFillColorPrimary}" />
            </StackPanel>

          <!-- Theme Section -->
          <TextBlock Text="App Theme"
                     FontSize="16"
                     FontWeight="SemiBold"
                     FontFamily="Segoe UI Variable"
                     Foreground="{ThemeResource TextFillColorSecondary}" />

          <ComboBox x:Name="ThemeSelector"
                    SelectionChanged="ThemeSelector_SelectionChanged"
                    Width="200">
            <ComboBoxItem Tag="Default" Content="Use system setting" />
            <ComboBoxItem Tag="Light" Content="Light" />
            <ComboBoxItem Tag="Dark" Content="Dark" />
          </ComboBox>


        </StackPanel>
    </ScrollViewer>
</Page>
