<Window
    x:Class="Customer_Manager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Customer_Manager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="Customer Manager">

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Row with Add Button -->
        <Grid Grid.Row="0">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromHorizontalOffset="-30" />
                </TransitionCollection>
            </Grid.Transitions>

            <!-- Columns: Left for title and counters, Right for buttons -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left side: Title + Counters (stacked vertically) -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="4">
                <!-- Title -->
                <TextBlock Text="ðŸ§¾ Customer Manager"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center" />

                <!-- Counters -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBlock x:Name="TotalCountText" Text="Total: 0" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="IgCountText" Text="IG: 0" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="HcCountText" Text="HC: 0" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Row for Add, Refresh, and Search -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromHorizontalOffset="-30" />
                </TransitionCollection>
            </Grid.Transitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search Box on the left -->
            <TextBox x:Name="SearchTextBox"
             Grid.Column="0"
             PlaceholderText="Search by name or email"
             TextChanged="SearchTextBox_TextChanged"
             Width="300"
             VerticalAlignment="Center"
             HorizontalAlignment="Left"
             Margin="0,0,20,0"/>

            <!-- Icon Buttons (Right aligned) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <Button x:Name="AddButton"
                    Click="AddCustomer_Click"
                    ToolTipService.ToolTip="Add"
                    Style="{StaticResource AnimatedIconButtonStyle}">
                    <FontIcon Glyph="&#xE710;" />
                </Button>

                <Button x:Name="RefreshButton"
                    Click="RefreshButton_Click"
                    ToolTipService.ToolTip="Refresh"
                    Style="{StaticResource AnimatedIconButtonStyle}">
                    <FontIcon Glyph="&#xE72C;" />
                </Button>
            </StackPanel>
        </Grid>
        
        <toolkit:DataGrid
             x:Name="CustomerDataGrid"
                Grid.Row="2"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                SelectionMode="Single"
                Margin="0,10,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DoubleTapped="CustomerDataGrid_DoubleTapped"
                AlternatingRowBackground="{x:Null}">

            <toolkit:DataGrid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="40" />
                </TransitionCollection>
            </toolkit:DataGrid.Transitions>

            <toolkit:DataGrid.Columns>
                <toolkit:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <toolkit:DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <toolkit:DataGridTextColumn Header="SME" Binding="{Binding SME}" Width="Auto" />
                <toolkit:DataGridTextColumn Header="SV" Binding="{Binding SV}" Width="Auto" />
                <toolkit:DataGridTemplateColumn Header=" ">
                    <toolkit:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Click="OpenFolder_Click"
                                    ToolTipService.ToolTip="Open Folder"
                                    Margin="0,0,4,0"
                                    Style="{StaticResource AnimatedIconButtonStyle}">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="14" Foreground="DarkGreen"/>
                                </Button>
                                <Button Click="DeleteRow_Click"
                                    ToolTipService.ToolTip="Delete"
                                    Margin="4,0,0,0"
                                    Style="{StaticResource AnimatedIconButtonStyle}">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="Crimson"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </toolkit:DataGridTemplateColumn.CellTemplate>
                </toolkit:DataGridTemplateColumn>
            </toolkit:DataGrid.Columns>
        </toolkit:DataGrid>
    </Grid>
</Window>