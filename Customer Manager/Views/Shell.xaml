<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Customer_Manager.Views.Shell"
    x:Name="RootShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Customer_Manager.Views"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:NavigationView
        x:Name="NavView"
        PaneDisplayMode="Auto"
        CompactModeThresholdWidth="800"
        ExpandedModeThresholdWidth="1008"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        SelectionChanged="NavView_SelectionChanged"
        IsTitleBarAutoPaddingEnabled="True"
        Background="{ThemeResource SystemControlAcrylicWindowBrush}">

        <!-- Header with icon, title, and counters -->
        <controls:NavigationView.Header>
            <Grid Margin="12,0,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock Text="&#xE77B;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="28"
                           Foreground="{ThemeResource TextFillColorPrimary}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           Grid.Column="0" />

                <!-- Title and counters -->
                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center"
                            Spacing="2">
                    <TextBlock Text="Customer Manager"
                               FontSize="20"
                               FontWeight="Bold"
                               FontFamily="Segoe UI Variable"
                               Foreground="{ThemeResource TextFillColorPrimary}" />

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock x:Name="HeaderTotalText"
                                   FontSize="12"
                                   FontFamily="Segoe UI Variable"
                                   Foreground="{ThemeResource TextFillColorSecondary}" />
                        <TextBlock x:Name="HeaderIgText"
                                   FontSize="12"
                                   FontFamily="Segoe UI Variable"
                                   Foreground="{ThemeResource TextFillColorSecondary}" />
                        <TextBlock x:Name="HeaderHcText"
                                   FontSize="12"
                                   FontFamily="Segoe UI Variable"
                                   Foreground="{ThemeResource TextFillColorSecondary}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </controls:NavigationView.Header>

        <!-- Navigation Menu Items -->
        <controls:NavigationView.MenuItems>
            <!-- ðŸ‘¤ Logged-in user display -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="8" Spacing="4">

                <!-- Larger Circle with Initials -->
                <Grid Width="48" Height="48"
              Background="{ThemeResource AccentFillColorDefaultBrush}"
              CornerRadius="24">
                    <TextBlock Text="{Binding UserInitials, ElementName=RootShell}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White" />
                </Grid>

                <!-- Display name below -->
                <TextBlock Text="{Binding UserDisplayName, ElementName=RootShell}"
                   HorizontalAlignment="Center"
                   FontSize="13"
                   FontWeight="SemiLight"
                   Opacity="0.85"
                   Foreground="{ThemeResource TextFillColorSecondary}" />

                <!-- ðŸ‘¤ Logout -->
                <controls:NavigationViewItem Tag="logout">
                    <controls:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" FontFamily="Segoe MDL2 Assets" />
                    </controls:NavigationViewItem.Icon>
                    <TextBlock Text="Log out" />
                </controls:NavigationViewItem>
            </StackPanel>

            <!-- ðŸ”¹ Add spacing -->
            <controls:NavigationViewItem IsEnabled="False" Height="16" />

            <!-- ðŸ“‡ Navigation Items -->
            <controls:NavigationViewItem Icon="Contact"
                                         Content="Customers"
                                         Tag="customers" />

            <!-- Visual separator before Settings -->
            <controls:NavigationViewItemSeparator />

            <controls:NavigationViewItem Icon="Setting"
                                         Content="Settings"
                                         Tag="settings"
                                         Margin="0,8,0,0"
                                         FontSize="14"
                                         FontFamily="Segoe UI Variable" />
        </controls:NavigationView.MenuItems>

        <!-- Main content area -->
        <Frame x:Name="ContentFrame"/>
    </controls:NavigationView>
</Window>
